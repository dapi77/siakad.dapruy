<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Data Dummy Awal
    let dataJurusan = [
        { kode: "PPLG", nama: "Pengembangan Perangkat Lunak dan Gim", kajur: "Bpk. Iwan Setiawan, M.Kom" },
        { kode: "DKV", nama: "Desain Komunikasi Visual", kajur: "Ibu Maya Sartika, S.Sn" }
    ];

    function renderTable() {
        const tbody = document.getElementById('tableBodyJurusan');
        tbody.innerHTML = '';
        dataJurusan.forEach((item, index) => {
            tbody.innerHTML += `
                <tr>
                    <td>${index + 1}</td>
                    <td><span class="badge badge-info text-white p-2">${item.kode}</span></td>
                    <td>${item.nama}</td>
                    <td>${item.kajur}</td>
                    <td class="text-center">
                        <div class="btn-group">
                            <button class="btn btn-outline-warning btn-sm border-0" onclick="editData(${index})"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-outline-danger btn-sm border-0" onclick="deleteData(${index})"><i class="fas fa-trash"></i></button>
                        </div>
                    </td>
                </tr>
            `;
        });
    }

    function showModal() {
        document.getElementById('modalTitle').innerText = "Tambah Jurusan";
        document.getElementById('editIndex').value = "-1";
        document.getElementById('kodeJurusan').value = "";
        document.getElementById('namaJurusan').value = "";
        document.getElementById('kajur').value = "";
        $('#jurusanModal').modal('show');
    }

    function saveData() {
        const index = document.getElementById('editIndex').value;
        const kode = document.getElementById('kodeJurusan').value;
        const nama = document.getElementById('namaJurusan').value;
        const kajur = document.getElementById('kajur').value;

        if(!kode || !nama || !kajur) return alert("Mohon isi semua data!");

        if (index === "-1") {
            dataJurusan.push({ kode, nama, kajur });
        } else {
            dataJurusan[index] = { kode, nama, kajur };
        }

        $('#jurusanModal').modal('hide');
        renderTable();
    }

    function editData(index) {
        document.getElementById('modalTitle').innerText = "Edit Jurusan";
        document.getElementById('editIndex').value = index;
        document.getElementById('kodeJurusan').value = dataJurusan[index].kode;
        document.getElementById('namaJurusan').value = dataJurusan[index].nama;
        document.getElementById('kajur').value = dataJurusan[index].kajur;
        $('#jurusanModal').modal('show');
    }

    function deleteData(index) {
        if (confirm("Hapus jurusan ini?")) {
            dataJurusan.splice(index, 1);
            renderTable();
        }
    }

    // Jalankan saat pertama kali buka
    renderTable();
</script>

